{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App",
      "runtimeArgs": ["--require", "ts-node/register", "--nolazy"],
      "args": ["src/main.ts"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Tests",
      "runtimeExecutable": "${workspaceRoot}/node_modules/ts-mocha/bin/ts-mocha",
      "runtimeArgs": ["${workspaceFolder}/src/**/*.spec.ts"],
      "console": "integratedTerminal"
    }
  ]
}
