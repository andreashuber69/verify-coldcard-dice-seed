{
  "name": "verify-coldcard-dice-seed",
  "version": "1.0.19",
  "description": "Verify whether your COLDCARD correctly generates seeds and addresses from dice rolls.",
  "keywords": [
    "bitcoin",
    "wallet",
    "seed",
    "coldcard"
  ],
  "homepage": "https://github.com/andreashuber69/verify-coldcard-dice-seed/blob/develop/README.md#----verify-coldcard-dice-seed",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/verify-coldcard-dice-seed.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/verify-coldcard-dice-seed/issues"
  },
  "license": "Unlicense",
  "author": {
    "name": "Andreas Huber"
  },
  "engines": {
    "node": ">=14.18"
  },
  "type": "module",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "files": [
    "/dist/",
    "!/**/*.spec.*",
    "!/**/*.map",
    "/*.md"
  ],
  "scripts": {
    "start": "tsc && node .",
    "prelint": "cspell '**' && markdownlint '**/*.md'",
    "lint": "eslint --report-unused-disable-directives 'src/**'",
    "prebuild": "npm run lint",
    "build": "tsc",
    "test-no-coverage": "node --loader tsx --test src/*.spec.ts",
    "test": "c8 --exclude 'src/*.spec.ts' --reporter=text --reporter=lcov npm run test-no-coverage",
    "show-coverage": "vite 'coverage/lcov-report' --logLevel error --open",
    "preci": "npm run build",
    "ci": "npm test"
  },
  "dependencies": {
    "bech32": "^2.0.0",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.3",
    "tiny-secp256k1": "^2.2.3",
    "tslib": "^2.6.1"
  },
  "devDependencies": {
    "@andreashuber69/eslint-config": "^1.1.44",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/node": "^18.17.5",
    "c8": "^8.0.1",
    "coveralls": "^3.1.1",
    "cspell": "^7.0.0",
    "markdownlint-cli": "^0.35.0",
    "node-fetch": "^3.3.2",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  }
}
