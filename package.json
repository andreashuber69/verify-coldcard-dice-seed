{
  "name": "verify-coldcard-dice-seed",
  "version": "1.0.15",
  "description": "Verify whether your COLDCARD correctly generates seeds and addresses from dice rolls.",
  "keywords": [
    "bitcoin",
    "wallet",
    "seed",
    "coldcard"
  ],
  "homepage": "https://github.com/andreashuber69/verify-coldcard-dice-seed/blob/develop/README.md#----verify-coldcard-dice-seed",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/verify-coldcard-dice-seed.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/verify-coldcard-dice-seed/issues"
  },
  "license": "Unlicense",
  "author": {
    "name": "Andreas Huber"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "type": "module",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "files": [
    "/dist/",
    "!/**/*.spec.*",
    "!/**/*.map"
  ],
  "scripts": {
    "start": "tsc && node .",
    "prelint": "cspell '**/*.*' && markdownlint '*.md'",
    "lint": "eslint --ext .js,.ts --report-unused-disable-directives './src'",
    "test-no-coverage": "ts-mocha --loader=ts-node/esm './src/*.spec.ts'",
    "test": "c8 --include 'src/*.ts' --reporter=html --reporter=text --all npm run test-no-coverage",
    "show-coverage": "lite-server --baseDir=coverage",
    "preci": "npm run lint",
    "ci": "npm run test && tsc"
  },
  "devDependencies": {
    "@andreashuber69/eslint-config": "^1.1.4",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "c8": "^7.12.0",
    "chai": "^4.3.7",
    "cspell": "^6.19.2",
    "lite-server": "^2.6.1",
    "markdownlint-cli": "^0.33.0",
    "mocha": "^10.2.0",
    "node-fetch": "^3.3.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "bech32": "^2.0.0",
    "bip32": "^3.1.0",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^6.1.0",
    "tiny-secp256k1": "^2.2.1",
    "tslib": "^2.4.1"
  }
}
