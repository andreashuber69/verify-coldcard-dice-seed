{
  "extends": [
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/node20/tsconfig"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "noEmit": true,
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    ".eslintrc.cjs",
    "*.ts"
  ]
}
